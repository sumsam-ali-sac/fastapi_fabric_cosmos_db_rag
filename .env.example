# Application Settings
APP_NAME=Cosmos DB RAG Chat API
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Cosmos DB Configuration
COSMOS_ENDPOINT=https://xxxxx.sql.cosmos.fabric.microsoft.com:443/
COSMOS_KEY=your_cosmos_db_key
COSMOS_DATABASE_NAME=VectorCosmosDB
COSMOS_CONTAINER_NAME=vectorstorecontainer
COSMOS_CACHE_CONTAINER_NAME=vectorcachecontainer
COSMOS_VECTOR_PROPERTY_NAME=vector
COSMOS_MAX_RETRIES=3
COSMOS_CONNECTION_TIMEOUT=30

# Azure OpenAI Configuration - Completions
OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
OPENAI_API_KEY=your_openai_key
OPENAI_API_VERSION=2024-02-15-preview
OPENAI_COMPLETIONS_MODEL=gpt-4o
OPENAI_REQUEST_TIMEOUT=60

# Azure OpenAI Configuration - Embeddings
OPENAI_EMBEDDINGS_ENDPOINT=https://your-embeddings-instance.openai.azure.com/
OPENAI_EMBEDDINGS_API_KEY=your_embeddings_key
OPENAI_EMBEDDINGS_API_VERSION=2024-05-01-preview
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small
OPENAI_EMBEDDINGS_DIMENSIONS=1536

# Application Behavior
MAX_SEARCH_RESULTS=20
MIN_SIMILARITY_SCORE=0.02
CACHE_SIMILARITY_THRESHOLD=0.99
CHAT_HISTORY_LIMIT=3

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_HEADERS=["*"]

# Monitoring
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
